
@{
    ViewData["Title"] = "CheckoutOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Проверьте контакты</h2>
<form asp-controller="Buying" asp-action="ConfirmOrder">
    <div class="row">
        <label for="usr">ФИО:</label>
        <input type="text" name="fio" class="form-control" id="usr" required>
    </div>
    <div class="row">
        <label for="usr">Номер телефона:</label>
        <input type="text" name="telNumber" class="form-control" id="usr" required>
    </div>
    <div class="row">
        <label for="usr">Адресс доставки:</label>
        <input type="text" name="adress" class="form-control" id="usr" required>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="text-right">
                <div style="margin-right: 15px">
                    <button type="submit" class="btn btn-primary btn-lg">Подтвердить</button>
                </div>
            </div>
        </div>
    </div>
</form>

