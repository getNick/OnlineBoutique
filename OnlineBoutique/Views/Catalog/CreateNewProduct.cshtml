@using MarketCore.Classes
@model int
@{
    ViewData["Title"] = "CreateNewProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateNewProduct</h2>
<form asp-controller="Catalog" asp-action="Upload" method="post" class="dropzone" asp-antiforgery="false"
      enctype="multipart/form-data">
    <input type="text" name="productId" value="@Model" hidden>
</form>
<form asp-controller="Catalog" asp-action="NewProduct" method="post">
    <input type="text" name="productId" value="@Model" hidden>
    <div class="form-group col-lg-6">
        <label for="usr">Название:</label>
        <input type="text" name="name" class="form-control" id="usr">
    </div>
    <div class="form-group col-lg-6">
        <label for="usr">Описание:</label>
        <input type="text" name="description" class="form-control" id="usr">
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="text-right">
                <div style="margin-right: 15px">
                    <button type="submit" class="btn btn-primary btn-lg">Создать</button>
                </div>
            </div>
        </div>
    </div>

</form>
