@model MarketCore.Classes.UserSizes
@{
    ViewData["Title"] = "AddAllCustomerSizes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-controller="Customer" asp-action="SetSizes" method="post">
    <input type="text" name="userSizesId" value="@Model.UserSizesId" hidden>
    <div class="row">
        <div class="col-lg-6" align="center">
            <img src="@Url.Content("~/images/sizes/heightW.JPG")" class="thumbnail" style="width: 80%" />
        </div>
        <div class="form-group col-lg-6">
            <label for="usr">Укажите свой рост.</label>
            @if (Model.Height == null)
            {
                <input type="text" name="height" class="form-control" id="usr">
            }
            else
            {
                <input type="text" name="height" class="form-control" id="usr" value="@Model.Height">
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6" align="center">
            <img src="@Url.Content("~/images/sizes/breastW.JPG")" class="thumbnail" style="width: 80%" />
        </div>
        <div class="form-group col-lg-6">
            <label for="usr">Обхват груди в наиболее выступающий точках.Лента проходит по нижней части лопаток.</label>
            @if (Model.Breast == null)
            {
                <input type="text" name="breast" class="form-control" id="usr">
            }
            else
            {
                <input type="text" name="breast" class="form-control" id="usr" value="@Model.Breast">
            }
        </div>

    </div>

    <div class="row">
        <div class="col-lg-6" align="center">
            <img src="@Url.Content("~/images/sizes/waistW.JPG")" class="thumbnail" style="width: 80%" />
        </div>
        <div class="form-group col-lg-6">
            <label for="usr">Обхват талии в самом узком месте.Лента паралельно полу.</label>
            @if (Model.Waist == null)
            {
                <input type="text" name="waist" class="form-control" id="usr">
            }
            else
            {
                <input type="text" name="waist" class="form-control" id="usr" value="@Model.Waist">
            }
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6" align="center">
            <img src="@Url.Content("~/images/sizes/thighW.JPG")" class="thumbnail" style="width: 80%" />
        </div>
        <div class="form-group col-lg-6">
            <label for="usr">Обхват бедер в наиболее выступющих точках.Ноги вместе.</label>
            @if (Model.Thigh == null)
            {
                <input type="text" name="thigh" class="form-control" id="usr">
            }
            else
            {
                <input type="text" name="thigh" class="form-control" id="usr" value="@Model.Thigh">
            }
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6" align="center">
            <img src="@Url.Content("~/images/sizes/thighGirthW.JPG")" class="thumbnail" style="width: 80%" />
        </div>
        <div class="form-group col-lg-6">
            <label for="usr">Измеряем в самом широком месте бедра, под ягодичной складкой.</label>
            @if (Model.ThighGirth == null)
            {
                <input type="text" name="thighGirth" class="form-control" id="usr">
            }
            else
            {
                <input type="text" name="thighGirth" class="form-control" id="usr" value="@Model.ThighGirth">
            }
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6" align="center">
            <img src="@Url.Content("~/images/sizes/shouldersWidthW.JPG")" class="thumbnail" style="width: 80%" />
        </div>
        <div class="form-group col-lg-6">
            <label for="usr">Нащупайте крайнюю точку плечевой косточки.Набросьте ленту на плечи и измерьте расстояние между плечевыми точками.</label>
            @if (Model.ShouldersWidth == null)
            {
            <input type="text" name="shouldersWidth" class="form-control" id="usr">
            }
            else
            {
                <input type="text" name="shouldersWidth" class="form-control" id="usr" value="@Model.ShouldersWidth">
            }
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="text-right">
                <div style="margin-right: 15px">
                    <button type="submit" class="btn btn-primary btn-lg">Запомнить</button>
                </div>
            </div>
        </div>
    </div>
</form>
